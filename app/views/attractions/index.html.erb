<p id="notice"><%= notice %></p>

<h1>Attractions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Duration minutes</th>
      <th>Max capacity</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @attractions %>
      <% @attractions.each do |attraction| %>
        <tr>
          <td><%= attraction.name %></td>
          <td><%= attraction.address %></td>
          <td><%= attraction.duration_minutes %></td>
          <td><%= attraction.max_capacity %></td>
          <td><%= attraction.company %></td>
          <td><%= link_to 'Show', attraction %></td>
          <td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
          <td><%= link_to 'Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attraction', new_attraction_path %>
