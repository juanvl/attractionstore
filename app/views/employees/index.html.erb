<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>National registry number</th>
      <th>Name</th>
      <th>Job role</th>
      <th>Company</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.national_registry_number %></td>
        <td><%= employee.name %></td>
        <td><%= employee.job_role %></td>
        <td><%= employee.company %></td>
        <td><%= employee.user %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

